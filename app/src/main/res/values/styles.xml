<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">#0077D5</item>
        <item name="itemIconTint">@color/colorAccent</item>
        <!--Statusbar-->
        <item name="colorPrimaryDark">#035FAC</item>
        <item name="colorAccent">@color/colorAccent</item>




        <!--Color del título-->
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <!--La barra de navegación de color blanco-->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">#e2e2e2</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!--Fondo de los items del navigation-->
        <item name="colorNavigationItem">@color/shape_rosa</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>



    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#FFFFFF</item>
    </style>

    <style name="titulo_items">
        <item name="android:textColor">#0077D5</item>
    </style>


</resources>